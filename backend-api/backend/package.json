{
  "name": "ai-grammar-editor-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Grammar Editor with SQL Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "sqlcmd -S localhost -U sa -P YourPassword123 -i scripts/setup-database.sql",
    "test-db": "node scripts/test-database.js",
    "reset-db": "sqlcmd -S localhost -U sa -P YourPassword123 -Q \"DROP DATABASE IF EXISTS GrammarCheckerDB\" && npm run setup-db",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
