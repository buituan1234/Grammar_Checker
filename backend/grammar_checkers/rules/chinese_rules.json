  "errorPatterns": [
    {
      "name": "duplicate_particle",
      "pattern": "(的|了|在){2,}",
      "flags": "g",
      "type": "Grammar",
      "message": "Duplicate particle detected",
      "shortMessage": "Duplicate word"
    },
    {
      "name": "number_without_measure",
      "pattern": "(\\d+|一|两|三|四|五|六|七|八|九|十)(?![个本只辆件张条对队组块片场种族群])",
