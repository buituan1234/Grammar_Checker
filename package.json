{
  "name": "grammar-checker-ai",
  "version": "2.0.0",
  "type": "module",
  "description": "AI-powered grammar checker using LanguageTool API",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "npm run lint && npm test",
    "languagetool": "cd D:/app/LanguageTool/LanguageTool-6.7-SNAPSHOT && java -cp \"languagetool-server.jar;libs/*\" org.languagetool.server.HTTPServer --config server.properties --port 8081 --allow-origin \"*\"",
    "dev-all": "concurrently -n \"BACKEND,LANGUAGETOOL\" -c \"blue,green\" \"npm run dev\" \"npm run languagetool\"",
    "start-all": "concurrently -n \"BACKEND,LANGUAGETOOL\" -c \"blue,green\" \"npm start\" \"npm run languagetool\""
  },
  "keywords": [
    "grammar",
    "checker",
    "languagetool",
    "ai",
    "nodejs",
    "express"
  ],
  "author": "Bui Tuan",
  "license": "MIT",
  "dependencies": {
    "@openai/agents": "^0.0.15",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.0",
    "cld3-asm": "^1.0.1",
    "cohere-ai": "^7.18.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^6.15.0",
    "helmet": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.40.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10"
  }
}
